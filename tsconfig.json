{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmit": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES5"
  },
  "include": ["src/**/*", "src/custom.d.ts"],
  "exclude": [".cache", "public", "node_modules"]
}
